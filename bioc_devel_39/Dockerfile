FROM bioconductor/devel_core2:latest

RUN apt-get update -qq && apt-get -y install libbz2-dev libssl-dev libssh2-1-dev libcurl4-openssl-dev libxml2-dev texlive libhts-dev liblzma-dev pandoc

RUN Rscript -e "install.packages(c('devtools', 'optparse', 'rmarkdown', 'roxygen2', 'testthat', 'tidyverse', 'knitr', 'boot', 'gplots')); BiocManager::install(c('BiocCheck', 'BiocStyle', 'annotatr', 'chipenrich', 'DelayedArray', 'GO.db', 'org.Dm.eg.db', 'org.Dr.eg.db', 'org.Gg.eg.db', 'org.Hs.eg.db', 'org.Mm.eg.db', 'org.Rn.eg.db', 'TxDb.Dmelanogaster.UCSC.dm3.ensGene', 'TxDb.Dmelanogaster.UCSC.dm6.ensGene', 'TxDb.Drerio.UCSC.danRer10.refGene', 'TxDb.Ggallus.UCSC.galGal5.refGene', 'TxDb.Hsapiens.UCSC.hg19.knownGene', 'TxDb.Hsapiens.UCSC.hg38.knownGene', 'TxDb.Mmusculus.UCSC.mm9.knownGene', 'TxDb.Mmusculus.UCSC.mm10.knownGene', 'TxDb.Rnorvegicus.UCSC.rn4.ensGene', 'TxDb.Rnorvegicus.UCSC.rn5.refGene', 'TxDb.Rnorvegicus.UCSC.rn6.refGene'), ask = FALSE, update = TRUE); devtools::install('hansenlab/bsseq'); BiocManager::install('DSS');"
